{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "baseUrl": "./src",
    "paths": {
      "@addon/*": ["addon/*"],
      "@app/*": ["app/*"],
      "@classes/*": ["classes/*"],
      "@core/*": ["core/*"],
      "@providers/*": ["providers/*"],
      "@components/*": ["components/*"],
      "@directives/*": ["directives/*"],
      "@pipes/*": ["pipes/*"]
    },
    "types": [
      "cordova",
      "cordova-plugin-file",
      "cordova-plugin-file-transfer",
      "cordova-plugin-globalization",
      "cordova-plugin-network-information",
      "events",
      "glob",
      "minimatch",
      "node",
      "promise.prototype.finally"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
